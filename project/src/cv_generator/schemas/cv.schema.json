{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Raminyazdani/cv_generator/blob/main/src/cv_generator/schemas/cv.schema.json",
  "title": "CV JSON Schema",
  "description": "Schema for CV Generator JSON files",
  "type": "object",
  "properties": {
    "basics": {
      "type": "array",
      "description": "Personal information array (usually contains one element)",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "fname": {
            "type": "string",
            "description": "First name"
          },
          "lname": {
            "type": "string",
            "description": "Last name"
          },
          "label": {
            "type": "array",
            "description": "Professional titles/labels",
            "items": {
              "type": "string"
            }
          },
          "email": {
            "type": "string",
            "description": "Email address"
          },
          "phone": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "countryCode": {
                    "type": "string"
                  },
                  "number": {
                    "type": "string"
                  },
                  "formatted": {
                    "type": "string"
                  }
                }
              },
              {
                "type": "null"
              }
            ]
          },
          "birthDate": {
            "type": ["string", "null"],
            "description": "Birth date (ISO format)"
          },
          "summary": {
            "type": ["string", "null"],
            "description": "Professional summary"
          },
          "location": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "address": {
                  "type": ["string", "null"]
                },
                "postalCode": {
                  "type": ["string", "null"]
                },
                "city": {
                  "type": ["string", "null"]
                },
                "region": {
                  "type": ["string", "null"]
                },
                "country": {
                  "type": ["string", "null"]
                }
              }
            }
          },
          "Pictures": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type_of": {
                  "type": "string"
                },
                "URL": {
                  "type": ["string", "null"]
                }
              }
            }
          }
        },
        "required": ["fname", "lname"]
      }
    },
    "profiles": {
      "type": "array",
      "description": "Social profiles and links",
      "items": {
        "type": "object",
        "properties": {
          "network": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "url": {
            "type": ["string", "null"]
          },
          "uuid": {
            "type": ["string", "null"]
          }
        }
      }
    },
    "education": {
      "type": "array",
      "description": "Education history",
      "items": {
        "type": "object",
        "properties": {
          "institution": {
            "type": "string"
          },
          "location": {
            "type": ["string", "null"]
          },
          "area": {
            "type": ["string", "null"]
          },
          "studyType": {
            "type": ["string", "null"]
          },
          "startDate": {
            "type": ["string", "null"]
          },
          "endDate": {
            "type": ["string", "null"]
          },
          "gpa": {
            "type": ["string", "null"]
          },
          "logo_url": {
            "type": ["string", "null"]
          },
          "type_key": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "languages": {
      "type": "array",
      "description": "Language proficiencies",
      "items": {
        "type": "object",
        "properties": {
          "language": {
            "type": "string"
          },
          "proficiency": {
            "type": "object",
            "properties": {
              "level": {
                "type": ["string", "null"]
              },
              "CEFR": {
                "type": ["string", "null"]
              },
              "status": {
                "type": ["string", "null"]
              }
            }
          },
          "certifications": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "test": {
                  "type": ["string", "null"]
                },
                "organization": {
                  "type": ["string", "null"]
                },
                "overall": {
                  "type": ["number", "null"]
                },
                "reading": {
                  "type": ["number", "null"]
                },
                "writing": {
                  "type": ["number", "null"]
                },
                "listening": {
                  "type": ["number", "null"]
                },
                "speaking": {
                  "type": ["number", "null"]
                },
                "maxScore": {
                  "type": ["number", "null"]
                },
                "minScore": {
                  "type": ["number", "null"]
                },
                "examDate": {
                  "type": ["string", "null"]
                },
                "URL": {
                  "type": ["string", "null"]
                }
              }
            }
          }
        }
      }
    },
    "workshop_and_certifications": {
      "type": "array",
      "description": "Workshops and certifications grouped by issuer",
      "items": {
        "type": "object",
        "properties": {
          "issuer": {
            "type": "string"
          },
          "certifications": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "date": {
                  "type": ["string", "null"]
                },
                "duration": {
                  "type": ["string", "null"]
                },
                "certificate": {
                  "type": ["boolean", "null"]
                },
                "URL": {
                  "type": ["string", "null"]
                },
                "type_key": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "skills": {
      "type": "object",
      "description": "Skills organized by category and subcategory",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "long_name": {
                "type": "string"
              },
              "short_name": {
                "type": "string"
              },
              "type_key": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": ["short_name"]
          }
        }
      }
    },
    "experiences": {
      "type": "array",
      "description": "Work experiences",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string"
          },
          "institution": {
            "type": ["string", "null"]
          },
          "duration": {
            "type": ["string", "null"]
          },
          "primaryFocus": {
            "type": ["string", "null"]
          },
          "description": {
            "type": ["string", "null"]
          },
          "type_key": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "description": "Projects and contributions",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": ["string", "null"]
          },
          "url": {
            "type": ["string", "null"]
          },
          "type_key": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "publications": {
      "type": "array",
      "description": "Academic publications",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "authors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "authors_structured": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "literal": {
                  "type": "string"
                }
              }
            }
          },
          "type": {
            "type": ["string", "null"]
          },
          "status": {
            "type": ["string", "null"]
          },
          "year": {
            "type": ["integer", "null"]
          },
          "month": {
            "type": ["integer", "null"]
          },
          "day": {
            "type": ["integer", "null"]
          },
          "date": {
            "type": ["string", "null"]
          },
          "journal": {
            "type": ["string", "null"]
          },
          "volume": {
            "type": ["string", "null"]
          },
          "issue": {
            "type": ["string", "null"]
          },
          "pages": {
            "type": ["string", "null"]
          },
          "article_number": {
            "type": ["string", "null"]
          },
          "doi": {
            "type": ["string", "null"]
          },
          "issn": {
            "type": ["string", "null"]
          },
          "url": {
            "type": ["string", "null"]
          },
          "access_date": {
            "type": ["string", "null"]
          },
          "language": {
            "type": ["string", "null"]
          },
          "publisher": {
            "type": ["string", "null"]
          },
          "place": {
            "type": ["string", "null"]
          },
          "editors": {
            "type": ["array", "null"],
            "items": {
              "type": "string"
            }
          },
          "book_title": {
            "type": ["string", "null"]
          },
          "chapter_pages": {
            "type": ["string", "null"]
          },
          "edition": {
            "type": ["string", "null"]
          },
          "conference": {
            "type": ["string", "null"]
          },
          "degree_type": {
            "type": ["string", "null"]
          },
          "repository_url": {
            "type": ["string", "null"]
          },
          "correspondent": {
            "type": ["string", "null"]
          },
          "supervisors": {
            "type": ["array", "null"],
            "items": {
              "type": "string"
            }
          },
          "institution": {
            "type": ["string", "null"]
          },
          "faculty": {
            "type": ["string", "null"]
          },
          "school": {
            "type": ["string", "null"]
          },
          "isbn": {
            "type": ["string", "null"]
          },
          "submissionDate": {
            "type": ["string", "null"]
          },
          "identifiers": {
            "type": "object",
            "properties": {
              "doi": {
                "type": ["string", "null"]
              },
              "isbn": {
                "type": ["string", "null"]
              },
              "issn": {
                "type": ["string", "null"]
              },
              "pmid": {
                "type": ["string", "null"]
              },
              "pmcid": {
                "type": ["string", "null"]
              },
              "arxiv": {
                "type": ["string", "null"]
              }
            }
          },
          "notes": {
            "type": ["string", "null"]
          },
          "URL": {
            "type": ["string", "null"]
          },
          "type_key": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "references": {
      "type": "array",
      "description": "Professional references",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "position": {
            "type": ["string", "null"]
          },
          "department": {
            "type": ["string", "null"]
          },
          "institution": {
            "type": ["string", "null"]
          },
          "location": {
            "type": ["string", "null"]
          },
          "email": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              {
                "type": "null"
              }
            ]
          },
          "phone": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "formatted": {
                      "type": "string"
                    },
                    "countryCode": {
                      "type": "string"
                    },
                    "number": {
                      "type": "string"
                    }
                  }
                }
              },
              {
                "type": "null"
              }
            ]
          },
          "URL": {
            "type": ["string", "null"]
          },
          "type_key": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": ["basics"]
}
